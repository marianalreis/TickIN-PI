<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalhes do Evento - TickIN</title>
    <link rel="stylesheet" href="../css/event-details.css" />
  </head>
  <body>
    <!-- Include the header -->
    <div id="header-placeholder"></div>

    <div class="event-container">
      <div class="event-details">
        <img src="<%= event.image %>" alt="<%= event.title %>" class="event-image">
        <div class="event-content">
          <h1 class="event-title"><%= event.title %></h1>
          <div class="event-info">
            <div class="info-item">
              <img src="/assets/calendar.png" alt="Data" class="info-icon">
              <span><%= event.date %></span>
            </div>
            <div class="info-item">
              <img src="/assets/clock.png" alt="Horário" class="info-icon">
              <span><%= event.time %></span>
            </div>
            <div class="info-item">
              <img src="/assets/location.png" alt="Local" class="info-icon">
              <span><%= event.location %></span>
            </div>
          </div>
          <div class="event-description">
            <%= event.description %>
          </div>
          <div class="organizer-section">
            <h2 class="organizer-header">Organizador do Evento</h2>
            <div class="organizer-card">
              <img src="<%= event.organizer.image %>" alt="<%= event.organizer.name %>" class="organizer-image">
              <div class="organizer-info">
                <h3><%= event.organizer.name %></h3>
                <p><%= event.organizer.description %></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="registration-card">
        <div class="success-message" id="successMessage">
          Inscrição realizada com sucesso!
        </div>
        <div class="price">R$ <%= event.price.toFixed(2) %></div>
        <button class="register-button" id="registerButton">
          Inscrever-se
        </button>
        <p style="color: #666; font-size: 0.9rem; text-align: center;">
          Ao se inscrever, você concorda com os termos e condições do evento.
        </p>
      </div>
    </div>

    <script>
      // Carregar o header
      fetch('../partials/header.html')
        .then(response => response.text())
        .then(data => {
          document.getElementById('header-placeholder').innerHTML = data;
        });

      document.getElementById('registerButton').addEventListener('click', async () => {
        try {
          // Simulação de inscrição bem-sucedida
          const successMessage = document.getElementById('successMessage');
          const registerButton = document.getElementById('registerButton');
          
          successMessage.style.display = 'block';
          registerButton.disabled = true;
          registerButton.textContent = 'Inscrito';
          registerButton.style.backgroundColor = '#4CAF50';
          
          setTimeout(() => {
            window.location.href = '/minhas-inscricoes';
          }, 2000);
        } catch (error) {
          alert('Erro ao realizar inscrição. Por favor, tente novamente.');
        }
      });
    </script>
  </body>
</html>
