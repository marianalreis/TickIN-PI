<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TickIN - Meus Eventos</title>
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/my-events.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="container">
      <h1 class="page-title">Meus Eventos</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message">
          <%= error %>
        </div>
      <% } %>

      <div class="grid">
        <% if (events && events.length > 0) { %>
          <% events.forEach(event => { %>
            <div class="card" onclick="window.location.href='/evento/<%= event.id %>'">
              <div class="event-image">
                <img src="<%= event.imagem || '/assets/event-placeholder.png' %>" alt="<%= event.titulo %>" onerror="this.src='/assets/tickIN.png'">
              </div>
              <div class="event-content">
                <h2 class="event-title"><%= event.titulo %></h2>
                <p class="event-description"><%= event.descricao %></p>
                <div class="event-details">
                  <div class="event-info">
                    <i class="fas fa-user"></i>
                    <span><%= event.organizador_nome %></span>
                  </div>
                  <div class="event-info">
                    <i class="fas fa-calendar"></i>
                    <span><%= new Date(event.data).toLocaleDateString('pt-BR') %></span>
                  </div>
                  <div class="event-info">
                    <i class="fas fa-clock"></i>
                    <span><%= event.horario %></span>
                  </div>
                  <div class="event-info">
                    <i class="fas fa-location-dot"></i>
                    <span><%= event.local %></span>
                  </div>
                </div>
                <div class="event-actions" onclick="event.stopPropagation()">
                  <a href="/eventos/inscritos/<%= event.id %>" class="button button-secondary">
                    <i class="fas fa-users"></i>
                    Ver Inscritos
                  </a>
                  <a href="/eventos/editar/<%= event.id %>" class="button button-secondary">
                    <i class="fas fa-edit"></i>
                    Editar
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="empty-state">
            <p>Você ainda não tem eventos cadastrados.</p>
            <a href="/registrar" class="button">Criar Novo Evento</a>
          </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>
  </body>
</html>
